# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here

# 数据库配置
DATABASE_URL=sqlite:///creative_factory.db

# 应用配置
FLASK_ENV=development
FLASK_DEBUG=True

# Google Trends配置
TRENDS_CACHE_DURATION=3600  # 缓存时长(秒)
TRENDS_REQUEST_DELAY=1      # 请求间隔(秒)

# OpenAI服务配置
DEFAULT_TRANSLATION_MODEL=gpt-5-nano
DEFAULT_CREATIVE_MODEL=gpt-5-mini
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30